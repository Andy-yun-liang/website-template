---
import { aboutData } from '../../data/editAboutData'; // adjust path as needed
import SVGIllustration from '../SVGIllustration';
---

<section id="about" class=" text-mudgreen px-6 md:px-20 py-24">
  <div class="max-w-4xl mx-auto">

    <h1 class="text-4xl font-bold text-center mb-16 uppercase tracking-widest">
      About Us
    </h1>

    <div class="space-y-16">
      {aboutData.map((section, idx) => (
        <div>
          <h2 class="text-sm font-semibold text-mudgreen uppercase tracking-widest mb-3">
            {section.title}
          </h2>

          {/* Paragraph content */}
          {section.content && !section.isList && typeof section.content === 'string' && (
            <p class="text-sm leading-relaxed text-gray-700">{section.content}</p>
          )}

          {section.content && !section.isList && Array.isArray(section.content) && (
            <>
              {section.content.map((paragraph, i) => (
                <p  class="text-sm leading-relaxed text-gray-700 mb-4">{paragraph}</p>
              ))}
            </>
          )}

          {/* List content */}
          {section.content && section.isList && Array.isArray(section.content) && (
            <ul class="list-disc list-inside text-sm text-gray-700 space-y-2 pl-4">
              {section.content.map((item, i) => (
                <li>{item}</li>
              ))}
            </ul>
          )}

          {/* Subsections */}
          {section.subsections && (
            <ul class="space-y-6">
              {section.subsections.map((sub, i) => (
                <li>
                  <h3 class="text-sm font-semibold text-mudgreen uppercase tracking-wide">
                    {sub.title}
                  </h3>
                  {typeof sub.content === 'string' ? (
                    <p class="text-sm text-gray-700 leading-relaxed">{sub.content}</p>
                  ) : sub.isList && Array.isArray(sub.content) ? (
                    <ul class="list-disc list-inside text-sm text-gray-700 space-y-2 pl-4">
                      {sub.content.map((item, idx) => (
                        <li>{item}</li>
                      ))}
                    </ul>
                  ) : null}
                </li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </div>

    <div class="flex justify-center pt-20">
      <button class="px-6 py-3 rounded-2xl shadow-md border-tiffanyblue text-tiffanyblue border hover:bg-tiffanyblue hover:text-white cursor-pointer">
        MEET OUR TEAM
      </button>
    </div>

  </div>
</section>
<SVGIllustration/>